# ðŸ”Œ COSTAATT POSTGRESQL INTEGRATION CONFIGURATION

# COSTAATT Database Connection (Your existing HR system)
COSTAATT_DB_HOST=your-costaatt-server.costaatt.edu.tt
COSTAATT_DB_PORT=5432
COSTAATT_DB_NAME=costaatt_hr
COSTAATT_DB_USER=hr_readonly
COSTAATT_DB_PASSWORD=your_secure_password_here
COSTAATT_DB_SSL=true

# Performance System Database (Current system)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/costaatt_hr"

# Integration Settings
INTEGRATION_ENABLED=true
SYNC_INTERVAL_MINUTES=60
AUTO_SYNC_ENABLED=true

# Security Settings
INTEGRATION_API_KEY=your_secure_integration_key_here
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data

# Sync Settings
SYNC_EMPLOYEES=true
SYNC_DEPARTMENTS=true
SYNC_ORG_STRUCTURE=true
SYNC_PERFORMANCE_HISTORY=true
SYNC_TRAINING_DATA=true

# Notification Settings
SYNC_NOTIFICATIONS_ENABLED=true
HR_NOTIFY_LIST=hr@costaatt.edu.tt,dheadley@costaatt.edu.tt

# Logging
INTEGRATION_LOG_LEVEL=info
LOG_SYNC_ACTIVITY=true
