{
  "name": "costaatt-hr-performance",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/api",
    "apps/web",
    "packages/shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd apps/api && node src/simple-server.js",
    "dev:web": "cd apps/web && npm run dev",
    "build": "npm run build --workspace=@costaatt/web",
    "db:generate": "cd apps/api && npx prisma generate",
    "db:push": "cd apps/api && npx prisma db push",
    "db:seed": "cd apps/api && node scripts/seed-data.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "express-jwt": "^8.5.1",
    "express-session": "^1.18.2",
    "jwks-rsa": "^3.2.0",
    "passport": "^0.7.0",
    "passport-azure-ad": "^4.3.5",
    "passport-oauth2": "^1.8.0"
  }
}
